@page
@model CarAnalysis.Pages.CarCategoryModel
@{
    ViewData["Title"] = "گروه خودروها";
}

<!-- Car Groups Section -->
<section class="car_groups_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>شرکت های خودرو</h2>
            <hr>
        </div>
        <div class="layout_padding">
            <div class="row">
                @foreach (var carCategory in Model.CarCategories)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 car_card">
                            <div class="card_image">
                                <img src="@carCategory.Picture" class="card-img-top" alt="@carCategory.Name">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@carCategory.Name</h5>
                                <p class="card-text">@carCategory.Description</p>
                                <div class="mt-auto text-center">
                                    <a asp-page="./Cars" asp-route-groupId="@carCategory.Id" class="btn btn-secondary w-100">خودرو ها</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End Car Groups Section -->