<section class="car_groups_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>آخرین خودروهای بررسی شده</h2>
            <hr>
        </div>
        <div class="layout_padding">
            <div class="row">
                @foreach (var car in Model.Cars)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 car_card">
                            <div class="card_image">
                                <img src="@car.Picture" class="card-img-top" alt="@car.PictureAlt">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@car.CarName</h5>
                                <p class="card-text">@car.ProducingCountry</p>
                                <p class="card-text">@car.BodyClass</p>
                                <p class="card-text">@car.EngineVolume</p>
                                <p class="card-text">@car.MaximumOutputPower</p>
                                <p class="card-text">@car.TypeOfGearbox</p>
                                <div class="mt-auto text-center">
                                    <a asp-page="./CarDetails" asp-route-id="@car.Id" class="btn btn-secondary w-100">بررسی مشخصات</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex col-lg-12 justify-content-center">
                <a href="/CarCategory" class="btn btn-secondary w-100">بررسی تمام خودروها</a>
            </div>
        </div>
    </div>
</section>