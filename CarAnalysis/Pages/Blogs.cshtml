                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 car_card">
                            <div class="card_image">
                                <img src="@blog.Picture" class="card-img-top" alt="">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@blog.Title</h5>
                                <p class="card-text">@blog.ShortDescription</p>
                                <div class="mt-auto text-center">
                                    <a asp-page="./BlogDetails" asp-route-id="@blog.Id" class="btn btn-secondary w-100">مطالعه مقاله</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
